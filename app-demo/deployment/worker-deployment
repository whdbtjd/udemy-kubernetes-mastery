apiVersion: apps/v1
kind: Deployment
metata:
  name: worker
  labels:
    app: worker

spec:
  replicas: 1
  selector:
    matchLabels:
      app: worker
  template:
      metadata:
        name: worker
        labels:
          app: worker
      spec: 
        containers:
          - name: worker
            image: dockersamples/examplevotingapp_worker
